@using Lexicon_LMS.Models
@model LoginViewModel
<link href="~/Content/Additional.css" rel="stylesheet" />

<div class="logoContainer">
    <img class="center" src="~/Content/logo.png" />
</div>
<div class="row">
    <div class="col-md-8">
        <section id="loginForm">
            @using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-2", role = "form" }))
            {
                    @Html.AntiForgeryToken()
                    <h1><span class="log-in">Log in</span></h1>
                    <p class="float">
                        <label for="login">Email</label>
                        <input type="text" name="login" placeholder="Email">
                    </p>
                    <p class="float">
                        <label for="password">Password</label>
                        <input type="password" name="password" placeholder="Password">
                        @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                        @Html.CheckBoxFor(m => m.RememberMe)
                        @Html.LabelFor(m => m.RememberMe)
                    </p>
                    <p class="clearfix">
                        <input type="submit" name="submit" value="Log in">
                    </p>
            }
        </section>
