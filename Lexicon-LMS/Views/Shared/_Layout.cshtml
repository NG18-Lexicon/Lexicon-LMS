<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - South-Hammond Institute of Technology</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/Scripts/UserScripts.js")
    <link href="~/Content/Footer.css" rel="stylesheet" />
    <link href="~/Content/navbarstyle.css" rel="stylesheet" />
    @using Microsoft.AspNet.Identity;
    @using Microsoft.AspNet.Identity.Owin;
    @using Microsoft.Owin.Security;
    @using Lexicon_LMS.Models;

</head>

<body>
    @if (User.Identity.IsAuthenticated)
    {
        ApplicationUser user = System.Web.HttpContext.Current.GetOwinContext().GetUserManager<ApplicationUserManager>().FindById(User.Identity.GetUserId());
        int unreadMessages = user.Notifications.Where(n => n.Read == false).Count();

        <div class="navbar navbar-inverse navbar-fixed-top">
            <div class="container">
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>

                    @Html.ActionLink("South-Hammond Institute of Technology", "Index", "Courses", new { area = "" }, new { @class = "navbar-brand" })
                </div>
                <div class="navbar-collapse collapse">
                    <ul class="nav navbar-nav">
                        @*<li>@Html.ActionLink("Courses", "Index", "Courses")</li>*@
                        @*<li>@Html.ActionLink("Modules", "Index", "Modules")</li>*@
                    </ul>
                    @Html.Partial("_LoginPartial")
                </div>
            </div>
        </div>

    }
    <div class="container body-content">
        @RenderBody()
    </div>
    <footer>
        <p>&copy; @DateTime.Now.Year - S.H.I.T - South-Hammond Institute of Technology. &copy; Back-End Solutions Table.</p>
    </footer>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
