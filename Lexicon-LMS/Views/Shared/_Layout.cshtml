<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - South-Hammond Institute of Technology</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link href="~/Content/Footer.css" rel="stylesheet" />
    <link href="~/Content/navbarstyle.css" rel="stylesheet" />

</head>

<body>
    @if (User.Identity.IsAuthenticated)
    {
        <div class="navbar navbar-inverse navbar-fixed-top">
            <div class="container">
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button> 

                    @Html.ActionLink("South-Hammond Institute of Technology", "Index", "Courses", new { area = "" }, new { @class = "navbar-brand" })
                </div>
                <div class="navbar-collapse collapse">
                    <ul class="nav navbar-nav">
                        <li>@Html.ActionLink("Courses", "Index", "Courses")</li>
                        <li>@Html.ActionLink("Modules", "Index", "Modules")</li>
                    </ul>
                    <ul class="nav navbar-nav navbar-right">
                        <li class="btn-group nav" style="float:right">
                            <button type="button" class="btn navbar-btn dropdown-toggle" data-toggle="dropdown">
                                <span class="glyphicon glyphicon-home"></span>
                                <span style="color: #996600"> | </span>
                                <span class="caret"></span>
                            </button>
                            <ul class="dropdown-menu" role="menu">
                                <li>
                                    <a href="@Url.Action("Index", "Manage")"><span class="glyphicon glyphicon-user"></span> My Profile</a>

                                </li>
                                @if (User.IsInRole("Teacher"))
                                {
                                    <li>
                                        <a href="@Url.Action("", "")">
                                            <span class="glyphicon glyphicon-list-alt"> </span>
                                            Mange Profiles
                                        </a>
                                    </li>
                                }
                                <li>
                                    <a href="javascript:document.getElementById('logoutForm').submit()">
                                        <span class="glyphicon glyphicon-log-out"></span>
                                        Logout
                                    </a>
                                </li>
                            </ul>
                        </li>
                        @Html.Partial("_LoginPartial")
                    </ul>
                </div>
            </div>
        </div>

    }
    <div class="container body-content">
        @RenderBody()
    </div>
    <footer>
        <p>&copy; @DateTime.Now.Year - S.H.I.T - South-Hammond Institute of Technology. &copy; Back-End Solutions Table.</p>
    </footer>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
