@model Lexicon_LMS.Models.IndexViewModel

@using Microsoft.AspNet.Identity;
@using Microsoft.AspNet.Identity.Owin;
@using Lexicon_LMS.Models;

@{
    ApplicationUser user = System.Web.HttpContext.Current.GetOwinContext().GetUserManager<ApplicationUserManager>().FindById(User.Identity.GetUserId());


}

<link href="~/Content/icecreamstyle.css" rel="stylesheet" />

<p class="text-success">@ViewBag.StatusMessage</p>
<div style="background-color:#e2e1e1; border-radius:12px; background: linear-gradient( rgba(126, 126, 126, 0.65), rgba(126, 126, 126, 0.45)); margin-top: 20px;">
    <h2 style="margin-left:5px; margin-top: 10px;">Manage your account</h2>
    <hr />

    <ul class="nav nav-tabs" id="myTab" role="tablist" style="background-color:#e2e1e1; background: linear-gradient( rgba(126, 126, 126, 0.65), rgba(126, 126, 126, 0.25));">
        <li class="nav-item active">
            <a class="nav-link active" id="profile-tab" data-toggle="tab" href="#profile" role="tab" aria-controls="profile" aria-selected="true">Profile</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" id="contact-tab" data-toggle="tab" href="#contact" role="tab" aria-controls="contact" aria-selected="false">Inbox</a>
        </li>
    </ul>

    <div class="tab-content" id="myTabContent" style="background-color:#fff; border-bottom-left-radius: 12px; border-bottom-right-radius: 12px; opacity:.75">
        <div class="tab-pane fade show active in" id="profile" role="tabpanel" aria-labelledby="profile-tab">

            <br />
            <div class="">
                <h2>@user.FullName</h2>
                @if (User.IsInRole("Teacher"))
                {<h4 style="margin-left:5px;">Teacher</h4>}
                else
                {<h4 style="margin-left:5px;">Student</h4>}
            </div>


            <dl class="dl-horizontal">

                <dt>E-mail</dt>
                <dd>@User.Identity.Name</dd>

                <dt>Account type</dt>
                <dd>
                    @if (User.IsInRole("Teacher"))
                        {<span>Teacher</span>}
                    else
                        { <span>Student</span>}
                </dd>

                <dt>Course</dt>
                @*<dd>@user.UserCourse.CourseName</dd>*@

                <dt>Phone nr</dt>
                <dd>@user.PhoneNumber</dd>

                <dt>Address</dt>
                <dd>@user.Street, @user.Postcode @user.City</dd>

                @*<dt>Two-Factor Authentication:</dt>
